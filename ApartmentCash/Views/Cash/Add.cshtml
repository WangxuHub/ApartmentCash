@using ApartmentCash.Models
@model ApartmentCash.Models.CashViewModel
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>


<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Add", "Cash", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h4>新增出纳信息</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m=>m.PayMoney, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PayMoney, new { @class = "form-control", autocomplete = "off", autocorrect = "off", autocapitalize = "off", spellcheck = "false" })
                        @Html.ValidationMessageFor(m => m.PayMoney, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.PaySummary, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.PaySummary, new { @class = "form-control", autocomplete = "off", autocorrect = "off", autocapitalize = "off", spellcheck = "false" })
                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="登录" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

